# Server Configuration
NODE_ENV=development
PORT=5000

# Database - Get from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/holodesk

# JWT Security - Generate random 32+ character strings
JWT_SECRET=your-super-secret-key-min-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-different-from-above
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=30d

# Frontend URL - For CORS (Change in production)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
